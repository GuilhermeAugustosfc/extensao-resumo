{
  "manifest_version": 3,
  "name": "YouTube Assistant",
  "version": "1.0",
  "description": "Uma extens√£o para interagir com o YouTube",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.deepseek.com/*",
    "*://*.chatgpt.com/*",
    "*://*.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube-transcript-page.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*", "*://*.deepseek.com/*", "*://*.google.com/*", "*://*.chatgpt.com/*"],
      "js": ["youtube-transcript.js", "content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
